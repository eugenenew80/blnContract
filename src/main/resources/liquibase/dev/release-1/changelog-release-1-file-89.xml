<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<changeSet id="cm-rus-1825" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: cm_pro_cldr_lines</comment>
		<createTable tableName="cm_pro_cldr_lines" schemaName="apps" remarks="производственный календарь: строки">
			<column name="id" type="number" remarks="Идентификатор">
				<constraints nullable="false"/>
			</column>

			<column name="header_id" type="number" remarks="Ид заголовка">
				<constraints nullable="true"/>
			</column>

			<column name="full_date" type="date" remarks="Дата календаря">
				<constraints nullable="true"/>
			</column>

			<column name="day" type="date" remarks="День">
				<constraints nullable="true"/>
			</column>

			<column name="day_type_code" type="varchar2(30)" remarks="тип дня недели">
				<constraints nullable="true"/>
			</column>

			<column name="day_color_code" type="varchar2(30)" remarks="цвет дня недели">
				<constraints nullable="true"/>
			</column>

			<column name="is_work_day" type="number" remarks="Рабочий день">
				<constraints nullable="true"/>
			</column>

			<column name="create_by" type="number" remarks="Автор">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="TIMESTAMP" remarks="Дата создания">
				<constraints nullable="false"/>
			</column>

			<column name="last_update_by" type="number" remarks="Автор обновления">
				<constraints nullable="false"/>
			</column>

			<column name="last_update_date" type="TIMESTAMP" remarks="Дата обновления">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="cm-rus-1826" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: cm_pro_cldr_lines</comment>
		<addPrimaryKey
				columnNames="id"
				constraintName="pk_cm_pro_cldr_lines"
				schemaName="apps"
				tableName="cm_pro_cldr_lines"/>
	</changeSet>

	<changeSet id="cm-rus-1827" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: cm_req_con_doc_route_orders</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="cm_pro_cldr_lines_s"
				startValue="1"/>
	</changeSet>


	<changeSet id="cm-rus-1820" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: cm_pro_cldr_lines_tl</comment>
		<createTable tableName="cm_pro_cldr_lines_tl" schemaName="apps" remarks="Перевод производственный календарь: строки">
			<column name="id" type="number" remarks="Идентификатор">
				<constraints nullable="false"/>
			</column>

			<column name="lang" type="varchar2(10)" remarks="Язык">
				<constraints nullable="false"/>
			</column>

			<column name="line_id" type="number" remarks="Ссылка на родительскую запись">
				<constraints nullable="false"/>
			</column>

			<column name="day_nm_sht" type="varchar2(30)" remarks="Краткое наименование дня недели">
				<constraints nullable="false"/>
			</column>

			<column name="day_nm_lng" type="varchar2(50)" remarks="Полное наименование дня недели">
				<constraints nullable="false"/>
			</column>

			<column name="mon" type="varchar2(17)" remarks="Месец">
				<constraints nullable="true"/>
			</column>

			<column name="create_by" type="number" remarks="Автор">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="TIMESTAMP" remarks="Дата создания">
				<constraints nullable="false"/>
			</column>

			<column name="last_update_by" type="number" remarks="Автор обновления">
				<constraints nullable="false"/>
			</column>

			<column name="last_update_date" type="TIMESTAMP" remarks="Дата обновления">
				<constraints nullable="false"/>
			</column>

		</createTable>
	</changeSet>

	<changeSet id="cm-rus-1821" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: cm_pro_cldr_lines_tl</comment>
		<addPrimaryKey
				columnNames="id"
				constraintName="pk_cm_pro_cldr_lines_tl"
				schemaName="apps"
				tableName="cm_pro_cldr_lines_tl"/>
	</changeSet>

	<changeSet id="cm-rus-1822" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: cm_pro_cldr_lines_tl</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="cm_pro_cldr_lines_tl_s"
				startValue="1"/>
	</changeSet>

	<changeSet id="cm-rus-1823" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating unique key for table: cm_pro_cldr_lines_tl</comment>
		<addUniqueConstraint
				columnNames="header_id,lang"
				constraintName="uk_cm_pro_cldr_lines_tl"
				schemaName="apps"
				tableName="cm_pro_cldr_lines_tl"/>
	</changeSet>

	<changeSet id="cm-rus-1824" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating foreign constraint: cm_pro_cldr_lines_tl to cm_pro_cldr_lines</comment>
		<addForeignKeyConstraint
				baseTableSchemaName="apps"
				baseTableName="cm_pro_cldr_lines_tl"
				baseColumnNames="header_id"
				constraintName="fk_cm_pro_cldr_lines_tl_1"
				deferrable="true"
				initiallyDeferred="true"
				onDelete="CASCADE"
				onUpdate="RESTRICT"
				referencedTableSchemaName="apps"
				referencedTableName="cm_pro_cldr_lines"
				referencedColumnNames="id"
		/>
	</changeSet>
</databaseChangeLog>